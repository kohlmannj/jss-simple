{
  "name": "jss-simple",
  "description": "Thin wrapper around jss that simplifies its interface and restricts you to a single stylesheet.",
  "repository": "git://github.com/ashaffer/jss-simple.git",
  "version": "0.4.0-beta.1",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "src/index.js",
  "author": "Andrew Shaffer",
  "contributors": [
    "Andrew Shaffer (@ashaffer)",
    "Joseph Kohlmann (@kohlmannj)"
  ],
  "files": [
    "lib"
  ],
  "private": true,
  "scripts": {
    "build": "babel src --out-dir lib",
    "lint-script": "standard --fix {src,__test__}/**/*.js",
    "postpublish": "rimraf lib",
    "precommit": "lint-staged",
    "prepublish": "npm run test && npm run build",
    "test": "jest --coverage"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "lib"
    ]
  },
  "peerDependencies": {
    "jss": "^7.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-jest": "^19.0.0",
    "babel-preset-latest": "^6.24.1",
    "coveralls": "^2.13.1",
    "husky": "^0.13.3",
    "jest": "^19.0.2",
    "jss": "^7.1.1",
    "lint-staged": "^3.4.1",
    "np": "^2.14.1",
    "rimraf": "^2.6.1",
    "standard": "^5.4.1"
  }
}
